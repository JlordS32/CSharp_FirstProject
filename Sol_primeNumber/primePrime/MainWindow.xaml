<Window x:Class="primePrime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:primePrime"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="MainWindow" 
        Height="500" Width="800">
    <Grid Margin="0,0,0,-6">
        <Label
            Content="Enter a number between 1 and 100" 
            Width="300"
            Height="30"
            Margin="50,27,150,227"
            FontSize="15"
            />
        <TextBox 
            x:Name="txtBox"
            Width="400"
            Margin="200,165,200,265"
            />
        <Button 
            x:Name="goBtn"
            Content="Go"
            Width="80"
            Height="20"
            Click="goBtn_Click" 
            Margin="208,125,208,135"
            />
        <TextBlock 
            x:Name="txtBlkOutput"
            HorizontalAlignment="Center"
            Margin="0,327,0,0" 
            FontSize="20"
            TextWrapping="Wrap" 
            TextAlignment="Center"
            VerticalAlignment="Top" 
            Height="90" 
            Width="400"
            />
    </Grid>
</Window>
